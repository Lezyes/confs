# Control screen brightness
bindcode 232 exec xbacklight -dec 1
bindcode 233 exec xbacklight -inc 1

# Screen Capture
bindsym ctrl+shift+2 exec scrot -e 'mv $f ~/screenshots/'


# Set the keymap to either Hebrew or English
exec setxkbmap us,il -option 'grp:alt_shift_toggle' ; bindsym Mod1+shift exec pkill -SIGRTMIN+12 i3blocks


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +2%  ; exec pkill -SIGRTMIN+10 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -2%  ; exec pkill -SIGRTMIN+10 i3blocks #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle ; exec pkill -SIGRTMIN+10 i3blocks # mute sound


# Media player controls
bindsym ctrl+Mod1+Up exec playerctl play-pause
bindsym ctrl+Mod1+Right exec playerctl next
bindsym ctrl+Mod1+Left exec playerctl previous
bindsym Shift+F11 exec pactl set-sink-volume @DEFAULT_SINK@ -2% ; exec pkill -SIGRTMIN+10 i3blocks
bindsym Shift+F12 exec pactl set-sink-volume @DEFAULT_SINK@ +2% ; exec pkill -SIGRTMIN+10 i3blocks

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


# Key indicators for Numlock
bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks

# Key indicators for Caps Lock
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks





mode "emoticon" {

        # back to normal: Enter or Escape
        bindsym s exec xclip -selection primary -rmlastnl -i ~/emoji/shrug ; exec xdotool getwindowfocus key --window %1 click 2 ; mode "default"
        bindsym f exec xclip -selection primary -rmlastnl -i ~/emoji/fight ; exec xdotool getwindowfocus key --window %1 click 2 ; mode "default"
        bindsym b exec xclip -selection primary -rmlastnl -i ~/emoji/blush ; exec xdotool getwindowfocus key --window %1 click 2 ; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+shift+p mode "emoticon"


