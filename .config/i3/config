# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        output primary
        tray_output none
        workspace_buttons no
        separator_symbol "■"

        status_command ~/gits/i3blocks-gaps/i3blocks -c ~/.config/i3/i3blocks_top.conf

        colors {
        statusline         $white
        background         $transparent
        separator          $transparent

#                          BORDER       BACKGROUND   TEXT
        focused_workspace  $transparent $transparent $darkwhite
        inactive_workspace $transparent $transparent $white
        active_workspace   $transparent $transparent $white
        urgent_workspace   $darkred     $darkred     $transparent
        binding_mode       $darkred     $darkred     $transparent
    }
}

bar {
        position bottom
        tray_output primary
        strip_workspace_numbers yes
        status_command ~/gits/i3blocks-gaps/i3blocks -c ~/.config/i3/i3blocks_bottom.conf

        colors {
        statusline         $white
        background         $transparent
        separator          $transparent

#                          BORDER       BACKGROUND   TEXT
        focused_workspace  $transparent $transparent $darkwhite
        inactive_workspace $transparent $transparent $white
        active_workspace   $transparent $transparent $white
        urgent_workspace   $darkred     $darkred     $transparent
        binding_mode       $darkred     $darkred     $transparent
    }
}

